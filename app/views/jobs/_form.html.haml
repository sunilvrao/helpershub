=semantic_form_for @job do |f|
  %fieldset.inputs
    %ol
      =f.input :title, :label=>"Job Title"
      =f.input :description, :as=>:text, :input_html=>{:rows=>5}, :label=>"Job Description"
      =f.input :start_date, :input_html=>{:class=>"date",:value=>@job.start_date.strftime("%d %b %Y")}
      =f.input :end_date, :input_html=>{:class=>"date",:value=>@job.end_date.strftime("%d %b %Y")}
      =f.input :location
      =f.input :startup_id,:as=>:select, :collection=>@startups
      =f.input :category_ids, :as=>:check_boxes, :collection=>@categories.collect(&:id), :label_method=>Proc.new{|c| Category.find(c).name}, :label=>"Categories"
  =f.buttons

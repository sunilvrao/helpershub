= content_for :sidebar do
  .widget-button
    = link_to new_request_path, :class=>"actionbutton", :id=>"call_to_action" do
      %span New Request

= render :partial => 'main_area_tabs' if !@user

#main-recent
  - if @category or @request
    #view_all
      =link_to requests_path, :class => 'small-button smalllightblue' do
        %span view all
      =link_to user_requests_path(current_user), :class => 'small-button smalllightblue' do
        %span view own
    .clear
  =render @requests
  .clear
  =paginate @requests
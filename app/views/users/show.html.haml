= content_for :sidebar do
  - if @user == current_user
    .widget-button
      = link_to '/profile', :class=>"actionbutton", :id=>"call_to_action" do
        %span Update Profile
  - else
    .widget-button
      - if current_user.is_following?(@user)
        = link_to unfollow_user_path(@user), :class=>"actionbutton", :id=>"call_to_action" do
          %span Unfollow User
      - else
        = link_to follow_user_path(@user), :class=>"actionbutton", :id=>"call_to_action" do
          %span Follow User

-content_for :secondary do
  =render :partial=>"secondary-nav"

=render @user
